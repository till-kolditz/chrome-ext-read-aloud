{
  "manifest_version": 3,
  "name": "Read Main Body Aloud",
  "version": "0.3.0",
  "description": "Reads aloud the main body text of the current page (ignores menus/sidebars).",
  "permissions": [
    "activeTab",
    "scripting",
    "tts",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Read Main Body Aloud",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}